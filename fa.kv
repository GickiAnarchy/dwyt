<FaButton@Button>:
    #font_size:10
    size_hint: 0.20, 0.20

<Front_Screen>:
    id:front
    BoxLayout:
        orientation:'horizontal'
        spacing:10
        padding:5,5
        FaButton:
            text:"Search"
            on_press:root.manager.current='search_screen'
        FaButton:
            text:"About"
            on_press:front.do_popup()
        FaButton:
            text:"Download"
            on_press:root.manager.current='download_screen'
        FaButton:
            text:"Exit"
            on_release:app.stop()

<Search_Screen>:
    BoxLayout:
        orientation:'horizontal'
        padding:10,10
        spacing:10
        size_hint:0.8, 0.20
        pos_hint:{'center_x':0.5, 'center_y':1.0}
        TextInput:
            id:search_in
            size_hint:None,None
            size:400,30
        FaButton:
            id:search_btn
            text:"Search"
            on_press:sch_res.update_data(search_in.text)
    Search_Results:
        id:sch_res
        size_hint:1.0, 0.80

<Search_Results>:
    viewclass:"Search_Item"
    data:self.data
    scroll_type:['bars', 'content']
    orientation:"vertical"
    padding: 10,10
    RecycleBoxLayout:
        cols:1
        halign:'center'
        default_size_hint:1.0, None
        size_hint: 1.0,0.2
        size_hint_y: None
        height:self.minimum_height
        orientation:'vertical'

<Search_Item>:
    orientation:'horizontal'
    BoxLayout:
        orientation:'vertical'
        size_hint:0.8,None
        Label:
            id:l_title
            font_size:12
            text:root.title
        Label:
            id:l_author
            font_size:12
            text:root.author
    Button:
        size_hint:0.15, 0.6
        pos_hint:{'center_y':0.8}
        text:"Download\nVideo"
        on_release:root.download()

<Download_Screen>:
    BoxLayout:
        orientation:"vertical"
        Label:
            pos_hint:{'center_x':0.5}
            text:"Enter a YouTube URL"
        TextInput:
            id:dl_input
            size_hint:0.50, 0.30
            pos_hint:{'center_x':0.5}
        Label:
            pos_hint:{'center_x':0.5}
            text:"Download Video or Audio?"
        BoxLayout:
            orientation:'horizontal'
            spacing:10
            padding:10,10
            pos_hint:{'center_x':0.5}
            Button:
                id:dl_audio
                text:"Audio"
                size_hint:0.7,0.4
                on_release:root.download(format = "A")
            Button:
                id:dl_video
                text:"Video"
                size_hint:0.7,0.4
                on_release:root.download(format = "V")

<Fa_Window>:
    canvas.before:
        Color:
            rgb: (0.35,0,0.15)
        Rectangle:
            size:self.size
            pos:self.pos
    orientation:'vertical'
    AnchorLayout:
        anchor_y:"top"
        anchor_x:'right'
        padding:10,10
        size_hint:0.5,0.25
        pos_hint:{'x':0.5,'y':0.75}
        FaButton:
            text:"Home"
            size_hint:0.3,0.5
            on_press:pmaster.to_home()
    AnchorLayout:
        anchor_y:'bottom'
        size_hint:0.9,0.75
        RelativeLayout:
            id:manager_layout
            Page_Master:
                id:pmaster
                padding: 10,10
                #size_hint:0.9,0.75
                pos_hint:{'x':0.05}
