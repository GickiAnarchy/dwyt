<FaButton@Button>:
    size_hint:None,None
    size:75,50
    font_size:10

<Front_Screen>:
    id:front
    BoxLayout:
        orientation:'horizontal'
        spacing:10
        padding:5,5
        FaButton:
            text:"Search"
            on_press:root.manager.current='search_screen'
        FaButton:
            text:"About"
            on_press:front.do_popup()
        FaButton:
            text:"Download"
            on_press:root.manager.current='download_screen'
        FaButton:
            text:"Exit"
            on_release:app.stop()

<Search_Screen>:
    BoxLayout:
        orientation:'vertical'
        TextInput:
            id:search_in
        FaButton:
            id:search_btn
            text:"Search"
            on_press:info.add_data()

<Download_Screen>:
    BoxLayout:
        orientation:"vertical"
        Label:
            pos_hint:{'center_x':0.5}
            text:"Enter a YouTube URL"
        TextInput:
            id:dl_input
            size_hint:0.50, 0.30
            pos_hint:{'center_x':0.5}
        Label:
            pos_hint:{'center_x':0.5}
            text:"Download Video or Audio?"
        BoxLayout:
            orientation:'horizontal'
            spacing:10
            padding:10,10
            pos_hint:{'center_x':0.5}
            Button:
                id:dl_audio
                text:"Audio"
                size_hint:0.7,0.4
                on_release:root.download(format = "A")
            Button:
                id:dl_video
                text:"Video"
                size_hint:0.7,0.4
                on_release:root.download(format = "V")

<Fa_Window>:
    canvas.before:
        Color:
            rgb: (0.3,0,0.2)
        Rectangle:
            size:self.size
            pos:self.pos
    win:win
    orientation:'vertical'
    size_hint:None,None
    size: win.size
    AnchorLayout:
        anchor_y:"top"
        padding:10,10
        size_hint:1.0,0.25
        pos_hint:{'y':0.75}
        FaButton:
            text:"Home"
            on_press:pmaster.to_home()
            size:60,30
            #pos_hint:{'center_x':0.5,'center_y':0.5}
    AnchorLayout:
        anchor_y:'bottom'
        size_hint:0.9,0.75
        Page_Master:
            id:pmaster
            padding: 10,10
            #size_hint:0.9,0.75
            pos_hint:{'x':0.05}

