<YouTubeWidget>:
    thumbnail_url:self.thumbnail_url
    title:self.title
    channel:channel
    publish_date:publish_date
    length:length
    description:description
    size_hint: None, None
    size:400,265
    pos_hint: {'center_x': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1.0, 1.0
        AsyncImage:
            id:self.thumbnail_url
            size_hint: .30, 1.0
            allow_stretch:True
            keep_ratio:False
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.70, 1.0
            Label:
                id:title
            Label:
                id:channel
            BoxLayout:
                Label:
                    id:publish_date
                Label:
                    id:length
            Label:
                id:description
